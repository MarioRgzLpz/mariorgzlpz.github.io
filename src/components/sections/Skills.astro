---
import Section from "../Section.astro"
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import TypeScript from "@/icons/type.astro"
import React from "@/icons/react.astro"
import PHP from "@/icons/PHP.astro"
import MySQL from "@/icons/sql.astro"
import Git from "@/icons/git.astro"
import GitHub from "@/icons/GitHub.astro"
import Python from "@/icons/python.astro"
import Java from "@/icons/java.astro"
import Ruby from "@/icons/ruby.astro"
import Cplusplus from "@/icons/cplusplus.astro"
import { skills } from "@cv"
import Docker from "@/icons/docker.astro"
import M365 from "@/icons/m365.astro"
import AWS from "@/icons/aws.astro"
import Azure from "@/icons/azure.astro"
import Terraform from "@/icons/terraform.astro"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  PHP,
  Cplusplus,
  Python,
  Java,
  Ruby,
  MySQL,
  Git,
  GitHub,
  Docker,
  AWS,
  Azure,
  M365,
  Terraform,
}
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name }) => {
        const iconName = name === "C++" ? "Cplusplus" : name
        const Icon = SKILLS_ICONS[iconName]

        return (
          <li>
            {Icon && <Icon />} <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
